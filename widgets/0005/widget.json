{
  "settings": {
    "type": "carousel",
    "columns": {
      "mobile": 2,
      "desktop": 5,
      "tablet": 3
    },
    "limit": 10,
    "position": "bottom",
    "rule": "BESTSELLERS",
    "template": "1.0",
    "languages": {
      "default": "en",
      "selected": ["en", "es"]
    },
    "customHtml": {
      "status": "hidden"
    }
  },
  "config": {
    "widget": {
      "styles": {
        "background": "#000000",
        "border-color": "#D4D8DF"
      },
      "elements": {
        "title": {
          "tag": "title",
          "status": "active",
          "styles": {
            "color": "red"
          }
        },
        "productName": {
          "tag": "name",
          "status": "active",
          "styles": {
            "color": "pink",
            "font-size": "24px"
          }
        },
        "price": {
          "tag": "price",
          "status": "active",
          "styles": {
            "color": "violet"
          }
        },
        "compareAtPrice": {
          "tag": "compareAtPrice",
          "status": "hidden",
          "styles": {
            "color": "#212121"
          }
        },
        "productImage": {
          "tag": "image",
          "status": "active",
          "styles": {
            "border-radius": "90%"
          }
        },
        "brandLogo": {
          "tag": "brandLogo",
          "status": "hidden",
          "meta": {
            "url": "#"
          }
        },
        "buttons": {
          "tag": "buttons",
          "status": "active",
          "elements": {
            "cart": {
              "tag": "cart",
              "status": "hidden",
              "styles": {
                "color": "#FFFFFF",
                "background-color": "#1863DC",
                "border-color": "#1863DC"
              },
              "action": "redirectToCart"
            }
          }
        }
      }
    }
  },
  "meta": {
    "customCSS": "",
    "customHTML": ""
  }
}
